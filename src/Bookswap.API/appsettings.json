{
  "ConnectionStrings": {
    "DefaultConnection": "Server=.;Database=bookswap;Trusted_Connection=True;MultipleActiveResultSets=True"
  },
  "JwtSettings": {
    "Issuer": "BookswapAPI",
    "Audience": "BookswapUI",
    "DurationInMinutes": 30,
    "Key": "JwtBookswapSecurityToken"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Application": "Bookswap",
        "Args": { "serverUrl": "https://localhost:44363/" }
      }
    ]
  },
  "AllowedHosts": "*"
}